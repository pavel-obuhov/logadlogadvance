<?xml version="1.0"?>            	
<config>
   <sections>
        <dev>
            <groups>
                <log>
                    <fields>
                    	<log_settings translate="label">
							<label>Log sending frequency</label>
							<frontend_type>select</frontend_type>
							<source_model>
								obuhovpavel_advancedlogging/source_LoggingOptions
							</source_model>
							<sort_order>100</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</log_settings>
						<send_exceptionlog translate="label">
							<label>Send Exceptions Log</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>120</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</send_exceptionlog>
						<emails translate="label">
							<label>Logs Receiver</label>
							<frontend_type>text</frontend_type>
							<sort_order>130</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
							<comment>Separated by comma</comment>
						</emails>
						<cron_start translate="label">
							<label>Log send every day at</label>
							<frontend_type>time</frontend_type>
							<sort_order>140</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</cron_start>
						 <error_email_identity translate="label">
                            <label>Error Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </error_email_identity>
                         <error_email_template translate="label">
                            <label>Error Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>160</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </error_email_template>
                    </fields>                    	
                </log>
            </groups>
        </dev>
    </sections>
</config>